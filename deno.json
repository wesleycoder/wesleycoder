{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "nodeModulesDir": "auto",
  "workspace": [
    "apps/*",
    "pkgs/*"
  ],
  "unstable": [
    "broadcast-channel",
    "net",
    "temporal",
    "tsgo",
    "webgpu"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "deno.ns",
      "esnext"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 120,
    "quoteProps": "asNeeded"
  },
  "lint": {
    "plugins": [
      "jsr:@ryu/deno-lint-plugin-tailwindcss@^0.2.0"
    ],
    "rules": {
      "exclude": [
        "jsx-key"
      ]
    },
    "exclude": [
      ".astro",
      ".vite",
      "**/pb_*/*"
    ]
  },
  "tasks": {
    "build": "echo 'no build'",
    "test": "echo 'no test'"
  },
  "minimumDependencyAge": "P5D",
  "imports": {
    "esbuild": "npm:esbuild@0.27.2",
    "sharp": "npm:sharp@0.34.5",
    "npm:esbuild": "npm:esbuild@0.27.2",
    "npm:sharp": "npm:sharp@0.34.5"
  },
  "allowScripts": {
    "allow": [
      "npm:esbuild",
      "npm:sharp"
    ],
    "deny": [
      "npm:fsevents"
    ]
  }
}
