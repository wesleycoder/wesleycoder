{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "nodeModulesDir": "auto",
  "workspace": [
    "apps/*",
    "pkgs/*"
  ],
  "unstable": [
    "broadcast-channel",
    "net",
    "temporal",
    "tsgo",
    "webgpu"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "deno.ns",
      "esnext"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 120,
    "quoteProps": "asNeeded"
  },
  "lint": {
    "plugins": [
      "jsr:@ryu/deno-lint-plugin-tailwindcss@^0.2.0"
    ],
    "rules": {
      "exclude": [
        "jsx-key"
      ]
    },
    "exclude": [
      ".astro",
      ".vite",
      "**/pb_*/*"
    ]
  },
  "minimumDependencyAge": "P5D",
  "allowScripts": {
    "allow": [
      "npm:esbuild@0.25.12"
    ],
    "deny": [
      "npm:fsevents@2.3.3",
      "npm:sharp@0.34.5"
    ]
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.6",
    "@std/collections": "jsr:@std/collections@^1.1.3",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.18",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "solid-js": "npm:solid-js@^1.9.10",
    "tailwindcss": "npm:tailwindcss@^4.1.18",
    "vite": "npm:vite@^7.3.0",
    "vite-plugin-solid": "npm:vite-plugin-solid@^2.11.10"
  }
}
