{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "nodeModulesDir": "auto",
  "workspace": [
    "apps/*",
    "pkgs/*"
  ],
  "unstable": [
    "broadcast-channel",
    "net",
    "temporal",
    "tsgo",
    "webgpu"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "deno.ns",
      "esnext"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 120,
    "quoteProps": "asNeeded"
  },
  "minimumDependencyAge": "P5D",
  "allowScripts": {
    "allow": [
      "npm:esbuild@0.25.12"
    ],
    "deny": [
      "npm:fsevents@2.3.3",
      "npm:sharp@0.34.5"
    ]
  }
}
